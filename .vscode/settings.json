{
    "files.exclude": {
        "out": true,
        "deps/.bin/*.exe": true,
        "deps/*/bin": true,
        "deps/*/include": true,
        "deps/*/lib": true,
        "deps/*/share": true,
        "deps/*/src/build": true,
        "deps/*/src/*[0-9]": true,
        "node_modules": true
    },
    "files.watcherExclude": {
        "bin": true,
        "out": true,
        "deps": true,
        "node_modules": true
    },
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/src/",
        "${workspaceFolder}/deps/boost/include/boost-1_74/",
        "${workspaceFolder}/deps/fmt/include/",
        "${workspaceFolder}/deps/gflags/include/",
        "${workspaceFolder}/deps/glog/include/",
        "${workspaceFolder}/deps/json/include/",
        "${workspaceFolder}/deps/node/include/",
        "${workspaceFolder}/deps/node/include/v8/",
        "${workspaceFolder}/deps/node/include/uv/"
    ],
    "C_Cpp.default.defines": [
        "UNICODE",
        "_UNICODE"
    ],
    "C_Cpp.default.cppStandard": "c++20"
}
